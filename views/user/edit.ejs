  <body>
    <%- include('../components/themes.ejs') %>
    

    <main class="d-flex flex-nowrap">
    
      <%- include('../components/sidebar.ejs',{activepage:"edit"}) %>

      <section class="w-100">
        <nav class="navbar bg-body-tertiary">
          <div
            class="container-fluid justify-content-center justify-content-md-between"
            >
            <a class="navbar-brand fw-medium fs-3 mb-1 mb-md-0"
              >Cheques<sup> under </sup>collection </a
            >

          </div>
        </nav>


        <nav class="px-2 mt-4 d-flex flex-wrap justify-content-between" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= obj.Customer %></li>
          </ol>


          <p class="me-md-5" id="logo"> <span class="fw-medium fs-6">Id :</span> <%= obj._id %></p>
        </nav>








        <form action="/edit/<%= obj._id %>?_method=PUT" method="post" class="mx-0 row gx-3 gy-4  info" dir="rtl">
          <div class="col-md-12">
            <label for="inputcust" class="form-label">العميل :</label>
            <input
              name="Customer"
              placeholder="Customer"
              type="text"
              class="form-control"
              id="inputcust"
              value="<%= obj.Customer %>"
            />
          </div>

      

          <div class="col-md-6">
            <label for="inputprice" class="form-label">المبلغ :</label>
            <input
              name="price"
              placeholder="price"
              type="number"
              class="form-control"
              id="inputprice"
              value="<%= obj.price %>"
              title=""
              step="0.01"
            />
          </div>

          <div class="col-md-6">
            <label for="inputBank" class="form-label">البنك :</label>
            <select id="inputBank" class="form-select" onchange="changeimg(this)" name="Bank" >
              <option selected hidden disabled>Choose Bank ...</option>
      <% const bankarr = ["abc شركة","abc منشأة","مصر شركة","مصر فردي",
      "القاهرة شركة","القاهرة منشأة","cib","الاسكندرية شركة","الاسكندرية شخصي",
      "قطر","الاهلي"] %>

              <% bankarr.forEach(item => { %>
                <option  <%=obj.Bank === item?"selected":null   %> value="<%= item %>"><%= item %></option>
              <% }) %>
            </select>
          </div>
<div>
          <div class="col-md-6">
            <label for="inputbranch" class="form-label">الفرع :</label>
            <select id="inputbranch" class="form-select" name="Branch">
              <option selected hidden disabled>Choose Branch ...</option>
              <option <%=obj.Branch === "نور العاشر"?"selected":null   %>>نور العاشر</option>
              <option <%=obj.Branch === "اكتوبر"?"selected":null   %>>اكتوبر</option>
            </select>
          </div>
        </div>
          
        <div>
          <div class="col-md-6">
            <label for="inputdate1" class="form-label">تاريخ الايداع :</label>
            <input
            name="First_Date"
              type="date"
              class="form-control"
              id="inputdate1"
              value="<%= obj.First_Date %>"
            />
          </div>
        </div>

        <div>
          <div class="col-md-6">
            <label for="inputdate2" class="form-label">تاريخ التحصيل :</label>
            <input
            name="Second_Date"
              type="date"
              class="form-control"
              id="inputdate2"
              value="<%= obj.Second_Date %>"
            />
          </div>
        </div>

<div>
          <div class="col-md-6">
            <label for="inputhala" class="form-label">حالة الشيك :</label>
            <select id="inputhala" class="form-select" name="Info">
              <option selected hidden disabled>Choose Info ...</option>
              <option <%=obj.Info === "تم التحصيل"?"selected":null   %>>تم التحصيل</option>
              <option <%=obj.Info === "مرتد"?"selected":null   %>>مرتد</option>
            </select>
          </div>

          
            <div class="col-md-6 photobank">
              <img src="../img/<%= obj.Bank %>.png" alt="" id="imgbank" name="Bank_Img">
            </div>
            <br>

            <div class="col-12">
            <button type="submit" class="btn btn-primary">
              Update changes
            </button>
      

            <button
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              type="button"
              class="btn btn-danger"
            >
              Delete Customer
            </button>
          </div>
        </form>
      </section>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                Delete Customer
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">Are you sure you want to continue delete the customer?</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <form action="/edit/<%= obj._id %>?_method=DELETE" method="post">
              <button
              type="submit" class="btn btn-danger">
                Delete
            </button>
          </form>
            </div>
          </div>
        </div>
      </div>




    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>

  </body>
